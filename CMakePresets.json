{
    "version": 8,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/vs.${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "unit-tests",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "TESTS": "ON"
            }
        },
        {
            "name": "windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "firmware.windows",
            "inherits": "default"
        },
        {
            "name": "firmware.linux",
            "inherits": "default"
        },
        {
            "name": "unit-tests.gcc.windows",
            "toolchainFile": "cmake/toolchain_windows_gcc.cmake",
            "inherits": [
                "unit-tests",
                "windows"
            ]
        },
        {
            "name": "unit-tests.gcc.linux",
            "toolchainFile": "cmake/toolchain_linux_gcc.cmake",
            "inherits": [
                "unit-tests",
                "linux"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "unit-tests.gcc.windows",
            "configurePreset": "unit-tests.gcc.windows"
        },
        {
            "name": "unit-tests.gcc.linux",
            "configurePreset": "unit-tests.gcc.linux"
        }
    ],
    "testPresets": [
        {
            "name": "unit-tests.gcc.windows",
            "configurePreset": "unit-tests.gcc.windows"
        },
        {
            "name": "unit-tests.gcc.linux",
            "configurePreset": "unit-tests.gcc.linux"
        }
    ]
}